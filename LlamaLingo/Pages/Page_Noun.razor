		param3.Value = pod;


		cmd.Parameters.Add(param1);
		cmd.Parameters.Add(param2);
		cmd.Parameters.Add(param3);

		connection.Open();
		cmd.CommandType = CommandType.StoredProcedure;

		//execute the stored procedure
		cmd.ExecuteNonQuery();
		SqlDataReader reader = cmd.ExecuteReader();
		nouns.Clear();
		while (reader.Read())
		{
